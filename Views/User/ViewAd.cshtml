@model WebApplication1.Models.Adviewmodel
@{
    ViewBag.Title = "ViewAd";
    Layout = "~/Views/Shared/Layout1.cshtml";
}


    <div class="row">
        <div class="col-lg-12 col-md-12">

        <img src="~/Content/images/beardo.jfif" class="img img-responsive" style="width:100%" />
             </div>
    </div>

    <div class="row">

        <div class="col-lg-2 col-md-2">
            <img src="~/Content/images/ecom1.jfif" class="img img-responsive" style="height:1000px;" />
        </div>


        <div class="col-lg-8 col-md-8">
        <div>
            <h1>@Model.pro_name <small> Product Id:@Model.pro_id</small></h1>
        </div>

            <img src="@Url.Content(@Model.pro_image)" style="width:800px;height:450px"/>

            <div>
                <h1>Description</h1>
                <p>@Model.pro_des</p>
            </div>

            <table>

            <tr>
                <td><b> Price:</b> @Model.pro_price</td>
            </tr>

            <tr>
                <td><b> Category:</b></td><td> @Model.cat_name</td>
            </tr>

            <tr>
                <td><b> Posted by :</b></td><td> @Model.u_name <img src="@Url.Content(@Model.u_image)" style="width:40px;height:40px"/></td>
            </tr>

            <tr>
                <td><b> Contact :</b></td><td> @Model.u_contact</td>
            </tr>
            
            <tr><td colspan="2">
                @if (Convert.ToInt32(Session["u_id"]) == Convert.ToInt32(Model.pro_fk_user))
                {
                       @Html.ActionLink("Remove this Ad","DeleteAd",new {@class = "btn btn-info", id = Model.pro_id})    
                }

            </td></tr>

                </table>
            
        </div>


        <div class="col-lg-2 col-md-2">
            <img src="~/Content/images/ecom2.jfif" class="img img-responsive" style="height:1000px;" />
        </div>




    </div>